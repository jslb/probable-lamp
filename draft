#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main()
{
    char inputstr[50];
    char inst[10];
    int marker = 1;
    int spacebool;
    
    //runs continuously
    while (marker == 1)
    {
        printf("Enter input: ");
        
        //reads, stores, and prints, input
        fgets(inputstr, sizeof(inputstr), stdin);  // read string
        printf("You entered: ");
        puts(inputstr);    // display string
        
         //inspect and print each char, line by line
        char* s;
        char ch = 's'; //
        
        for ( s=&inputstr[0]; *s != '\0'; s++ )
        //for ( s=&str[0]; *s < 50; s++ )
        {
            printf("%c\n", *s);
            ch = *s;
            spacebool = isspace(*s);
            //printf("%i", spacebool);
            
            if (spacebool == 0){
                strncat(inst, &ch, 1);
                //printf("%s", inst);
            }
            else
            {
                //call functions
                //printf("that was a space dummy");
                printf("Instruction: %s", inst);
                
                if (strcmp(inst, "add") == 0)
                {
                    printf("\ncall add func\n");
                    
                } 
                else if (strcmp(inst, "mov") == 0)
                {
                    printf("\ncall move func\n");
                    
                } else 
                {
                    printf("Unknown instruction");
                }
                
                //break;
            }
        }
        s = 0;
        strcpy(inst, "");
    }
    
    //out of while loops, exits
    return 0;
}
